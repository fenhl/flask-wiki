{% extends 'base.html.j2' %}

{% block title %}{{wiki_name}}{% endblock %}

{% block page_content %}
    <h1>{{wiki_name}}</h1>
    {% for namespace, articles in g.wiki.namespaces() %}
        <h2>{{namespace}}</h2>
        <ul>
            {% for article in articles %}
                <li>{{article}}</li>
            {% else %}
                <li>(This namespace is empty.)</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>There are no articles in this wiki.</p>
    {% endfor %}
{% endblock %}
